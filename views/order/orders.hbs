<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-sm p-0">
                <button class="navbar-toggler"
                        data-bs-toggle="collapse"
                        data-bs-target="#nav-section"
                        type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item">
                            <a href="/products" class="nav-link px-3">Products</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/orders" class="nav-link px-3">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill icon-1"></i></a></li>
                            <li class="breadcrumb-item text-uppercase active">Orders</li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Orders</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div class="card">
                <div class="table-responsive">
                    <div class="m-3">
                        <div class="row">
                            <div class="col-md-4">

                                <select name="#"
                                        class="form-control form-select">
                                    <option value="-1">All</option>
                                    <option value="delivered">Delivered</option>
                                    <option value="delivering">Delivering</option>
                                    <option value="cancel">Cancel</option>
                                </select>
                            </div>
                            <div class="col-md-8">
                                <div class="search-form search-form--light d-flex">
                                    <input type="text"
                                        class="form-control search"
                                        placeholder="Search">
                                    <button class="btn"
                                            type="button"
                                            role="button"><i class="bi bi-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table mb-0 table-striped">
                        <thead>
                            <tr>
                                <th style="width: 18px;" class="text-center">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input js-toggle-check-all" data-target="#products" id="customCheckAll">
                                        <label class="custom-control-label" for="customCheckAll">
                                            <span class="text-hide">Toggle all</span>
                                        </label>
                                    </div>
                                </th>
                                <th style="width: 30px;" class="text-center">#ID</th>
                                <th>Customer Name</th>
                                <th class="text-center" style="width: 120px;">Total</th>
                                <th>Address</th>
                                <th style="width: 120px;">Created At</th>
                                <th style="width: 60px;" class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody class="list" id="orders">
                            {{#each orders}}
                            <tr>
                                <td class="text-center">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox"
                                            class="custom-control-input js-check-selected-row"
                                            id="customCheck1_1">
                                        <label class="custom-control-label"
                                            for="customCheck1_1"><span class="text-hide">Check</span></label>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="badge bg-lightblue">{{id}}</div>
                                </td>
                                <td>
                                    <img src="/images/clem-onojeghuo-192088.jpg"
                                        alt="product"
                                        style="width:35px"
                                        class="rounded mr-2">
                                    <a href="/orders/invoice">Nguyen Gia Huy</a>
                                </td>
                                <td class="text-center">
                                    {{total}}Ä‘</td>
                                <td>
                                    <a href="#">1 Dien Bien Phu, Binh Thanh</a>
                                </td>
                                <td>01/01/2021</td>
                                <td class="text-center">
                                    <a href="#" class="btn btn-sm btn-success">Delivered</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>   
                <div class="card-body text-end">
                    15 <span class="text-muted">of 25</span> <a href="#"
                        class="text-muted-light"><i class="bi bi-arrow-right"></i></a>
                </div>                        
            </div>
        </div>
    </div>
</div>