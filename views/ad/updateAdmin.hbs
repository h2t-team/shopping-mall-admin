<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-sm p-0">
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav-section"
                    type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item">
                            <a href="/products" class="nav-link px-3">Products</a>
                        </li>
                        <li class="nav-item">
                            <a href="/orders" class="nav-link px-3">Orders</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item">
                                <a href="index.html"><i class="bi bi-house-door-fill icon-1"></i></a>
                            </li>
                            <li class="breadcrumb-item text-uppercase active">
                                Admins
                            </li>
                            <li class="breadcrumb-item text-uppercase active">
                                {{title}}
                            </li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">{{title}}</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div class="card">
                <div class="row g-0">
                    <div class="col-lg-4 p-4">
                        <p class="fw-bold mb-3">Admin Information</p>
                        <p class="text-muted mb-3">
                            Update admin information.
                        </p>
                    </div>
                    <div class="col-lg-8 p-4">
                        <form action="/admins/updateadmin"  id="update-admin-form" method="post" >
                            <input name="id" id="id" type="hidden" value="{{admin.id}}" class="form-control"></input>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="lastName">Last Name</label>
                                        <input name="lastName" id="lastName" type="text" value="{{admin.lastName}}" class="form-control"  autocomplete="off"/>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label for="firstName">First Name</label>
                                        <input name="firstName" id="firstName" type="text" value="{{admin.firstName}}" class="form-control"  autocomplete="off"/>
                                    </div>
                                </div>
                            </div>                     
                            <div class="row">
                                <div class="col-2">
                                    <div class="form-group">
                                        <label for="pprice">Price (VNƒê)</label>
                                        <input id="pprice" name="pprice" type="number" class="form-control" value="{{product.price}}" min="0"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="pdesc">Description</label>
                                <textarea name="pdesc" id="pdesc" rows="4" class="form-control">{{product.description}}</textarea>
                            </div>
                            <div class="form-group">
                                <label>Image</label>
                                <div class="d-flex align-items-center">
                                    
                                    {{#each productImage}}
                                    <div class="me-3">
                                        <div class="avatar" style="width: 80px; height: 80px">
                                            <img src={{image_url}} class="avatar-img rounded"
                                                alt="..." />
                                        </div>
                                    </div>
                                    {{/each}}
                                    <div class="me-3">
                                        <div class="avatar" style="width: 80px; height: 80px">
                                            <img src="/images/account-add-photo.svg" class="avatar-img rounded"
                                                alt="..." />
                                        </div>
                                    </div>
                                    <div class="media-body">
                                        <button class="btn btn-sm btn-primary">
                                            Choose photo
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="text-end mb-5">
                                    <button class="btn btn-success" onclick="submitUpdateProductForm()" >Update</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>