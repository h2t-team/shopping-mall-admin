<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-sm p-0">
                <button class="navbar-toggler"
                        data-bs-toggle="collapse"
                        data-bs-target="#nav-section"
                        type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item">
                            <a href="/products" class="nav-link px-3">Products</a>
                        </li>
                        <li class="nav-item">
                            <a href="/orders" class="nav-link px-3">Orders</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill icon-1"></i></a></li>
                            <li class="breadcrumb-item text-uppercase active">Admins</li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Admins</h1>
                </div>
                <a href="/admins/addadmin"
                    class="btn btn-success ml-3">Create</a>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div id="errorMessage"></div>
            <div class="card">
                <div class="table-responsive">
                    <div class="m-3">
                        <div class="row">
                            <div class="col-md-4 offset-md-8">
                                <form class="search-form search-form--light d-flex" action="/admins/search" method="get">
                                    <input type="text"
                                        class="form-control search"
                                        placeholder="Search"
                                        name="keyword"
                                        autocomplete="off"
                                        value="{{search}}">
                                    <button class="btn"
                                            type="submit"
                                            role="button"><i class="bi bi-search"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <table class="table mb-0 table-striped">
                        <thead>
                            <tr>
                                <th style="width: 18px;"></th>
                                <th style="min-width: 300px;">Name</th>
                                <th style="width: 200px;">Username</th>
                                <th style="width: 250px;">Email</th>
                                <th style="width: 200px;">Telephone</th>
                                <th style="width: 50px;"></th>
                                <th style="width: 50px;"></th>
                            </tr>
                        </thead>
                        <tbody class="list" id="products">
                            {{#each admins}}
                            <tr>
                                <td class="text-center">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox"
                                            class="custom-control-input js-check-selected-row"
                                            id="customCheck_{{id}}">
                                        <label class="custom-control-label"
                                            for="customCheck_{{id}}"><span class="text-hide">Check</span></label>
                                    </div>
                                </td>
                                <td>
                                    <a href="/admins/{{id}}">{{last_name}} {{first_name}}</a>
                                </td>
                                <td>{{username}}</td>
                                <td>{{email}}</td>
                                <td>{{telephone}}</td>
                                <td class="text-center">
                                    <a href="/admins/updateadmin/{{id}}" class="btn btn-sm btn-primary">EDIT</td>
                                <td class="text-center">
                                    {{#if lock}} 
                                        <a href="javascript:void(0)" class="btn btn-sm btn-primary lock-btn" onclick="lockAdmin('{{id}}', false)">UNLOCK</a>
                                    {{else}}
                                        <a href="javascript:void(0)" class="btn btn-sm btn-primary lock-btn" onclick="lockAdmin('{{id}}', true)">LOCK</a>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <div class="card-body d-flex justify-content-sm-end justify-content-center">
                        <ul class="pagination">
                            {{#page currentPage maxPage url}}
                            {{/page}}
                        </ul>
                    </div>                        
                </div>
            </div>
        </div>
    </div>
</div>