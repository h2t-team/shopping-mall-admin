<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-sm p-0">
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav-section"
                    type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item">
                            <a href="/products" class="nav-link px-3">Products</a>
                        </li>
                        <li class="nav-item">
                            <a href="/orders" class="nav-link px-3">Orders</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item">
                                <a href="index.html"><i class="bi bi-house-door-fill icon-1"></i></a>
                            </li>
                            <li class="breadcrumb-item text-uppercase active">
                                Admins
                            </li>
                            <li class="breadcrumb-item text-uppercase active">
                                {{title}}
                            </li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">{{title}}</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div class="card">
                <div class="row g-0">
                    <div class="col-lg-4 p-4">
                        <p class="fw-bold mb-3">Admin Information</p>
                        <p class="text-muted mb-3">
                            Create admin information.
                        </p>
                    </div>
                    <div class="col-lg-8 p-4">
                        <form action="/admins/addadmin"  id="add-admin-form" method="post" class="needs-validation"novalidate>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="lastName">Last Name</label>
                                        <input name="lastName" id="lastName" type="text" class="form-control"  autocomplete="off"/>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label for="firstName">First Name</label>
                                        <input name="firstName" id="firstName" type="text" class="form-control"  autocomplete="off"/>
                                    </div>
                                </div>
                            </div>  
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="username">Username</label>
                                        <input id="username" name="username" class="form-control" required/>
                                        <div class="invalid-feedback">
                                            Please choose a username.
                                        </div>
                                    </div>
                                </div>
                            </div>   
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input id="password" name="password" type="password" class="form-control" required/>
                                    </div>
                                </div>
                            </div> 
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="confirmPassword">Confirm password</label>
                                        <input id="confirmPassword" type="password" class="form-control" required/>
                                        <div class="invalid-feedback">
                                            Password do not match.
                                        </div>
                                    </div>
                                </div>
                            </div>  
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input id="email" name="email" type="email" class="form-control"/>
                                        <div class="invalid-feedback">
                                            Please provide a valid email.
                                        </div>
                                    </div>
                                </div>
                            </div>                   
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="telephone">Telephone</label>
                                        <input id="telephone" name="telephone" class="form-control" min="0"/>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="text-end mb-5">
                                    <button class="btn btn-success" type="submit" onclick="submitAddAdminForm()">Create</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>