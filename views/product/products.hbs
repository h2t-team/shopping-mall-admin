<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-sm p-0">
                <button class="navbar-toggler"
                        data-bs-toggle="collapse"
                        data-bs-target="#nav-section"
                        type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/products" class="nav-link px-3">Products</a>
                        </li>
                        <li class="nav-item">
                            <a href="/orders" class="nav-link px-3">Orders</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item"><a href="index.html"><i class="bi bi-house-door-fill icon-1"></i></a></li>
                            <li class="breadcrumb-item text-uppercase active">Products</li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Products</h1>
                </div>
                <a href="/products/addproduct"
                    class="btn btn-success ml-3">Create</a>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div class="card">
                <div class="table-responsive">
                    <div class="m-3">
                        <div class="row">
                            <div class="col-md-4">
                                <select name="product-category" class="form-control form-select">
                                    <option value="-1">All</option>
                                    {{#each category}}
                                        <option value={{id}}>{{name}}</option> 
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-8">
                                <form class="search-form search-form--light d-flex" action="/products" method="get">
                                    <input type="text"
                                        class="form-control search"
                                        placeholder="Search"
                                        name="search"
                                        autocomplete="off">
                                    <button class="btn"
                                            type="submit"
                                            role="button"><i class="bi bi-search"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <table class="table mb-0 table-striped">
                        <thead>
                            <tr>
                                <th style="width: 18px;" class="text-center">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input js-toggle-check-all" data-target="#products" id="customCheckAll">
                                        <label class="custom-control-label" for="customCheckAll">
                                            <span class="text-hide">Toggle all</span>
                                        </label>
                                    </div>
                                </th>
                                <th style="width: 30px;"
                                    class="text-center">#ID</th>
                                <th>Product</th>
                                <th class="text-center" style="width: 150px;">Stock</th>
                                <th class="text-center" style="width: 150px">Category</th>
                                <th class="text-center" style="width: 150px;">Price</th>
                                <th class="text-center" style="width: 100px;">Rate</th>
                                <th style="width: 100px;" class="text-center">
                                    <div class="dropdown">
                                        <a href="#" data-bs-toggle="dropdown" class="dropdown-toggle">Bulk</a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="javascript:void(0)" class="dropdown-item">Remove selection products</a>
                                        </div>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="list" id="products">
                            {{#each products}}
                            <tr>
                                <td class="text-center">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox"
                                            class="custom-control-input js-check-selected-row"
                                            id="customCheck_{{id}}">
                                        <label class="custom-control-label"
                                            for="customCheck_{{id}}"><span class="text-hide">Check</span></label>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="badge bg-lightblue">{{id}}</div>
                                </td>
                                <td>
                                    <img src="{{'product_images.image_url'}}"
                                        alt="product"
                                        style="width:35px"
                                        class="rounded mr-2">
                                    <a href="#" class="ms-3">{{name}}</a>
                                </td>
                                {{#if total_amount}}
                                    <td class="text-center">{{total_amount}}</td>
                                {{else}}
                                    <td class="text-center">0</td>
                                {{/if}}
                                <td class="text-center">{{'category.name'}}</td>
                                <td class="text-center">{{currencyFormat price}}</td>
                                <td class="text-center">{{rate}}/5</td>
                                <td class="text-center">
                                    <a href="#"class="btn btn-sm btn-primary">EDIT</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>   
                <div class="card-body d-flex justify-content-end">
                    <ul class="pagination">
                        {{#page currentPage maxPage search}}
                        {{/page}}
                    </ul>
                </div>                        
            </div>
        </div>
    </div>
</div>