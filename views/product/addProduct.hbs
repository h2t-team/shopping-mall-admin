<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-sm p-0">
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav-section"
                    type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/products" class="nav-link px-3">Products</a>
                        </li>
                        <li class="nav-item">
                            <a href="/orders" class="nav-link px-3">Orders</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item">
                                <a href="index.html"><i class="bi bi-house-door-fill icon-1"></i></a>
                            </li>
                            <li class="breadcrumb-item text-uppercase active">
                                Products
                            </li>
                            <li class="breadcrumb-item text-uppercase active">
                                Add Product
                            </li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Add Product</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div class="card">
                <div class="row g-0">
                    <div class="col-lg-4 p-4">
                        <p class="fw-bold mb-3">Product Information</p>
                        <p class="text-muted mb-3">
                            Adding some basic product information.
                        </p>
                    </div>
                    <div class="col-lg-8 p-4">
                        <form action="/products/addproduct" id="add-product-form" method="post" onsubmit="handleAddProduct()">
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="pname">Name</label>
                                        <input name="pname" id="pname" type="text" class="form-control" placeholder="Product Name"  autocomplete="off"/>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label for="pcategory">Category</label>
                                        <select name="pcategory" id="pcategory" class="form-control form-select">
                                            {{#each category}}
                                                <option value={{id}}>{{name}}</option> 
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <div class="form-group">
                                        <label for="psize">Size</label>
                                        <select name="psize" class="form-control form-select" id="psize">
                                            <option value="xs">XS</option> 
                                            <option value="s">S</option> 
                                            <option value="m">M</option> 
                                            <option value="l">L</option> 
                                            <option value="xl">XL</option> 
                                            <option value="xxl">XXL</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="form-group">
                                        <label for="pquantity">Quantity</label>
                                        <input id="pquantity" name="pquantity" type="number" class="form-control" value="0" min="0"/>
                                    </div>
                                </div>
                                <div class="col-1">
                                    <div class="form-group">
                                        <label>Add</label>
                                        <a href="javascript:void(0)" class="btn btn-primary d-block" id="add-product-btn">
                                            <i class="bi bi-plus"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="offset-1 col-6 align-self-start">
                                    <div class="table-responsive" >
                                        <table class="table mb-0 table-striped" id="table-quantities">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">Size</th>
                                                    <th class="text-center">Quantity</th>
                                                </tr>
                                            </thead>
                                            <tbody class="list" id="psize-table">
                                            </tbody>
                                        </table>                
                                    </div>        
                                </div>
                            </div>                     
                            <div class="row">
                                <div class="col-2">
                                    <div class="form-group">
                                        <label for="pprice">Price (VNƒê)</label>
                                        <input id="pprice" name="pprice" type="number" class="form-control" value="0" min="0"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="pdesc">Description</label>
                                <textarea name="pdesc" id="pdesc" rows="4" class="form-control"
                                    placeholder="Product Description..."></textarea>
                            </div>
                            <div class="form-group">
                                <label>Image</label>
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <div class="avatar" style="width: 80px; height: 80px">
                                            <img src="/images/account-add-photo.svg" class="avatar-img rounded"
                                                alt="..." />
                                        </div>
                                    </div>
                                    <div class="media-body">
                                        <button class="btn btn-sm btn-primary">
                                            Choose photo
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="text-end mb-5">
                                    <button class="btn btn-success">Create</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>