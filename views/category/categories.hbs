<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-md p-0">
                <button class="navbar-toggler"
                        data-bs-toggle="collapse"
                        data-bs-target="#nav-section"
                        type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item">
                            <a href="/products" class="nav-link px-3">Products</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/categories" class="nav-link px-3">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a href="/orders" class="nav-link px-3">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill icon-1"></i></a></li>
                            <li class="breadcrumb-item text-uppercase active">Categories</li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Categories</h1>
                </div>
                <a href="/categories/addcategory"
                    class="btn btn-success ml-3">Create</a>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div class="card mx-auto category-container">
                <div class="m-3">
                    <form action="/categories/filter" method="get">
                        <div class="search-form">
                            <select name="levelValue" id="levelValue" class="form-control form-select">
                                {{#if level}}
                                    <option value="{{maxLevel}}">All</option>
                                    {{#allLevelOptions maxLevel}} {{/allLevelOptions}}
                                {{else}}
                                    <option value="{{levelValue}}">{{levelValue}} level(s)</option>
                                    <option value="{{maxLevel}}">All</option>
                                    {{#levelOptions maxLevel levelValue}} {{/levelOptions}}
                                {{/if}}
                            </select>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0 table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 65%;">Category Name</th>
                                <th style="width: 15%;" class="text-center">Total Products</th>
                                <th style="width: 20%;" class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{{html}}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
